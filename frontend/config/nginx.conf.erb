daemon off;
pid /app/nginx.pid;
error_log stderr info;

worker_processes 1;
events {
    worker_connections 1024;
}

http {
    gzip on;
    gzip_comp_level 2;
    gzip_min_length 512;
    gzip_proxied any;

    server {
        listen 80;
        server_name _;

        root /app/dist;  # Ensure this matches your build output directory

        location / {
            try_files $uri $uri/ /index.html;
        }

        # Optional: Custom error pages
        # error_page 404 /404.html;
    }
}
